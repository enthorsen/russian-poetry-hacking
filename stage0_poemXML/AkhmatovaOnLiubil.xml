                </w>
                <w>
                    <orth>Америки.</orth>
                    <str>ам<stress>е</stress>рики</str>
                </w>
            </l>
            <l>
                <w>
                    <orth>Не</orth>
                    <str>не</str>
                </w>
                <w>
                    <orth>любил,</orth>
                    <str>люб<stress>и</stress>л</str>
                </w>
                <w>
                    <orth>когда</orth>
                    <str>когд<stress>а</stress></str>
                </w>
                <w>
                    <orth>плачут</orth>
                    <str>пл<stress>а</stress>чут</str>
                </w>
                <w>
                    <orth>дети,</orth>
                    <str>д<stress>е</stress>ти</str>
                </w>
            </l>
            <l>
                <w>
                    <orth>Не</orth>
                    <str>не</str>
                </w>
                <w>
                    <orth>любил</orth>
                    <str>люб<stress>и</stress>л</str>
                </w>
                <w>
                    <orth>чая</orth>
                    <str>ч<stress>а</stress>я</str>
                </w>
                <w>
                    <orth>с</orth>
                    <str>с</str>
                </w>
                <w>
                    <orth>малиной</orth>
                    <str>мал<stress>и</stress>ной</str>
                </w>
            </l>
            <l>
                <w>
                    <orth>И</orth>
                    <str>и</str>
                </w>
                <w>
                    <orth>женской</orth>
                    <str>ж<stress>е</stress>нской</str>
                </w>
                <w>
                    <orth>истерики</orth>
                    <str>ист<stress>е</stress>рики</str>
                </w>
            </l>
            <l>
                <w>
                    <orth>...А</orth>
                    <str>а</str>
                </w>
                <w>
                    <orth>я</orth>
                    <str>я</str>
                </w>
                <w>
                    <orth>была</orth>
                    <str>был<stress>а</stress></str>
                </w>
                <w>
                    <orth>его</orth>
                    <str>ег<stress>о</stress></str>
                </w>
