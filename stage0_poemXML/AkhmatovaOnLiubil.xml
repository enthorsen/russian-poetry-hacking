        <lg type='stanza'>
            <l>
                <w>
                    <orth>Он</orth>
                    <str>он</str>
                </w>
                <w>
                    <orth>любил</orth>
                    <str>люб<stress>и</stress>л</str>
                </w>
                <w>
                    <orth>три</orth>
                    <str>(три)</str>
                </w>
                <w>
                    <orth>вещи</orth>
                    <str>в<stress>е</stress>щи</str>
                </w>
                <w>
                    <orth>на</orth>
                    <str>на</str>
                </w>
                <w>
                    <orth>свете:</orth>
                    <str>св<stress>е</stress>те</str>
                </w>
