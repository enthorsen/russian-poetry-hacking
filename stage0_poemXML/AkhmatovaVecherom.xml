<?xml version="1.0" encoding="UTF-8"?>


<poem title="Вечером" author="Анна Андреевна Ахматова">
    <divs>
        <lg type="stanza">
            <l>
                <w>
                    <orth>Звенела</orth>
                    <str>звен<stress>е</stress>ла</str>
                </w>
                <w>
                    <orth>музыка</orth>
                    <str>м<stress>у</stress>зыка</str>
                </w>
                <w>
                    <orth>в</orth>
                    <str>в</str>
                </w>
                <w>
                    <orth>саду</orth>
                    <str>сад<stress>у</stress></str>
                </w>
            </l>
            <l>
                <w>
                    <orth>Таким</orth>
                    <str>так<stress>и</stress>м</str>
                </w>
                <w>
                    <orth>невыразимым</orth>
                    <str>невыраз<stress>и</stress>мым</str>
                </w>
                <w>
                    <orth>горем.</orth>
                    <str>г<stress>о</stress>рем</str>
                </w>
            </l>
            <l>
                <w>
                    <orth>Свежо</orth>
                    <str>свеж<stress>о</stress></str>
                </w>
                <w>
                    <orth>и</orth>
                    <str>и</str>
                </w>
                <w>
                    <orth>остро</orth>
                    <str><stress>о</stress>стро</str>
                </w>
                <w>
                    <orth>пахли</orth>
                    <str>п<stress>а</stress>хли</str>
                </w>
                <w>
                    <orth>морем</orth>
                    <str>м<stress>о</stress>рем</str>
                </w>
            </l>
            <l>
                <w>
                    <orth>На</orth>
                    <str>на</str>
                </w>
                <w>
                    <orth>блюде</orth>
                    <str>бл<stress>ю</stress>де</str>
                </w>
                <w>
                    <orth>устрицы</orth>
                    <str><stress>у</stress>стрицы</str>
                </w>
                <w>
                    <orth>во</orth>
                    <str>во</str>
                </w>
                <w>
                    <orth>льду.</orth>
                    <str>льд<stress>у</stress></str>
                </w>
            </l>
        </lg>

        <lg type="stanza">
            <l>
                <w>
                    <orth>Он</orth>
                    <str>он</str>
                </w>
                <w>
                    <orth>мне</orth>
                    <str>(мне)</str>
                </w>
                <w>
                    <orth>сказал</orth>
                    <str>сказ<stress>а</stress>л</str>
                </w>
                <w>
                    <orth>"Я</orth>
                    <str>я</str>
                </w>
                <w>
                    <orth>верный</orth>
                    <str>в<stress>е</stress>рный</str>
                </w>
                <w>
                    <orth>друг!"</orth>
                    <str>др<stress>у</stress>г</str>
                </w>
            </l>
            <l>
                <w>
                    <orth>И</orth>
                    <str>и</str>
                </w>
                <w>
                    <orth>моего</orth>
                    <str>моег<stress>о</stress></str>
                </w>
                <w>
                    <orth>коснулся</orth>
                    <str>косн<stress>у</stress>лся</str>
                </w>
                <w>
                    <orth>платья.</orth>
                    <str>пл<stress>а</stress>тья</str>
                </w>
            </l>
            <l>
                <w>
                    <orth>Как</orth>
                    <str>как</str>
                </w>
                <w>
                    <orth>не</orth>
                    <str>не</str>
                </w>
                <w>
                    <orth>похожи</orth>
                    <str>пох<stress>о</stress>жи</str>
                </w>
                <w>
                    <orth>на</orth>
                    <str>на</str>
                </w>
                <w>
                    <orth>объятья</orth>
                    <str>объ<stress>я</stress>тья</str>
                </w>
            </l>
            <l>
                <w>
                    <orth>Прикосновенья</orth>
                    <str>прикоснов<stress>е</stress>нья</str>
                </w>
                <w>
                    <orth>этих</orth>
                    <str><stress>э</stress>тих</str>
                </w>
                <w>
                    <orth>рук.</orth>
                    <str>р<stress>у</stress>к</str>
                </w>
            </l>
        </lg>

        <lg type="stanza">
            <l>
                <w>
                    <orth>Так</orth>
                    <str>так</str>
                </w>
                <w>
                    <orth>гладят</orth>
                    <str>гл<stress>а</stress>дят</str>
                </w>
                <w>
                    <orth>кошек</orth>
                    <str>к<stress>о</stress>шек</str>
                </w>
                <w>
                    <orth>или</orth>
                    <str><stress>и</stress>ли</str>
                </w>
                <w>
                    <orth>птиц,</orth>
                    <str>пт<stress>и</stress>ц</str>
                </w>
            </l>
            <l>
                <w>
                    <orth>Так</orth>
                    <str>так</str>
                </w>
                <w>
                    <orth>на</orth>
                    <str>на</str>
                </w>
                <w>
                    <orth>наездниц</orth>
                    <str>на<stress>е</stress>здниц</str>
                </w>
                <w>
                    <orth>смотрят</orth>
                    <str>см<stress>о</stress>трят</str>
                </w>
                <w>
                    <orth>стройных...</orth>
                    <str>стр<stress>о</stress>йных</str>
                </w>
            </l>
            <l>
                <w>
                    <orth>Лишь</orth>
                    <str>лишь</str>
                </w>
                <w>
                    <orth>смех</orth>
                    <str>см<stress>е</stress>х</str>
                </w>
                <w>
                    <orth>в</orth>
                    <str>в</str>
                </w>
                <w>
                    <orth>глазах</orth>
                    <str>глаз<stress>а</stress>х</str>
                </w>
                <w>
                    <orth>его</orth>
                    <str>ег<stress>о</stress></str>
                </w>
                <w>
                    <orth>спокойных</orth>
                    <str>спок<stress>о</stress>йных</str>
                </w>
            </l>
            <l>
                <w>
                    <orth>Под</orth>
                    <str>под</str>
                </w>
                <w>
                    <orth>лёгким</orth>
                    <str>(лёгким)</str>
                </w>
                <w>
                    <orth>золотом</orth>
                    <str>з<stress>о</stress>лотом</str>
                </w>
                <w>
                    <orth>ресниц.</orth>
                    <str>ресн<stress>и</stress>ц</str>
                </w>
            </l>
        </lg>

        <lg type="stanza">
            <l>
                <w>
                    <orth>А</orth>
                    <str>а</str>
                </w>
                <w>
                    <orth>скорбных</orth>
                    <str>ск<stress>о</stress>рбных</str>
                </w>
                <w>
                    <orth>скрипок</orth>
                    <str>скр<stress>и</stress>пок</str>
                </w>
                <w>
                    <orth>голоса</orth>
                    <str>голос<stress>а</stress></str>
                </w>
            </l>
            <l>
                <w>
                    <orth>Поют</orth>
                    <str>по<stress>ю</stress>т</str>
                </w>
                <w>
                    <orth>за</orth>
                    <str>за</str>
                </w>
                <w>
                    <orth>стелющимся</orth>
                    <str>ст<stress>е</stress>лющимся</str>
                </w>
                <w>
                    <orth>дымом:</orth>
                    <str>д<stress>ы</stress>мом</str>
                </w>
            </l>
            <l>
                <w>
                    <orth>"Благослови</orth>
                    <str>благослов<stress>и</stress></str>
                </w>
                <w>
                    <orth>же</orth>
                    <str>же</str>
                </w>
                <w>
                    <orth>небеса—</orth>
                    <str>небес<stress>а</stress></str>
                </w>
            </l>
            <l>
                <w>
                    <orth>Ты</orth>
                    <str>(ты)</str>
                </w>
                <w>
                    <orth>первый</orth>
                    <str>п<stress>е</stress>рвый</str>
                </w>
                <w>
                    <orth>раз</orth>
                    <str>раз</str>
                </w>
                <w>
                    <orth>одна</orth>
                    <str>одн<stress>а</stress></str>
                </w>
                <w>
                    <orth>с</orth>
                    <str>с</str>
                </w>
                <w>
                    <orth>любимым".</orth>
                    <str>люб<stress>и</stress>мым</str>
                </w>
            </l>
        </lg>
    </divs>

    <date>1913</date>
</poem>
