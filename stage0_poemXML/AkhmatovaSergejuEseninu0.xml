<?xml version="1.0" encoding="UTF-8"?>


<poem title="Памяти Сергею Есенину" author="Анна Андреевна Ахматова">
    <divs>
        <lg type="stanza">
            <l>
                <w>
                    <orth>Так</orth>
                    <str>так</str>
                </w>
                <w>
                    <orth>просто</orth>
                    <str>пр<stress>о</stress>сто</str>
                </w>
                <w>
                    <orth>можно</orth>
                    <str>м<stress>о</stress>жно</str>
                </w>
                <w>
                    <orth>жизнь</orth>
                    <str>ж<stress>и</stress>знь</str>
                </w>
                <w>
                    <orth>покинуть</orth>
                    <str>пок<stress>и</stress>нуть</str>
                </w>
                <w>
                    <orth>эту,</orth>
                    <str><stress>э</stress>ту</str>
                </w>
            </l>
            <l>
                <w>
                    <orth>Бездумно</orth>
                    <str>безд<stress>у</stress>мно</str>
                </w>
                <w>
                    <orth>и</orth>
                    <str>и</str>
                </w>
                <w>
                    <orth>безбольно</orth>
                    <str>безб<stress>о</stress>льно</str>
                </w>
                <w>
                    <orth>догореть.</orth>
                    <str>догор<stress>е</stress>ть</str>
                </w>
            </l>
            <l>
                <w>
                    <orth>Но</orth>
                    <str>но</str>
                </w>
                <w>
                    <orth>не</orth>
                    <str>не</str>
                </w>
                <w>
                    <orth>дано</orth>
                    <str>дан<stress>о</stress></str>
                </w>
                <w>
                    <orth>Российскому</orth>
                    <str>росс<stress>и</stress>йскому</str>
                </w>
                <w>
                    <orth>поэту</orth>
                    <str>по<stress>э</stress>ту</str>
                </w>
            </l>
            <l>
                <w>
                    <orth>Такою</orth>
                    <str>так<stress>о</stress>ю</str>
                </w>
                <w>
                    <orth>светлой</orth>
                    <str>св<stress>е</stress>тлой</str>
                </w>
                <w>
                    <orth>смертью</orth>
                    <str>см<stress>е</stress>ртью</str>
                </w>
                <w>
                    <orth>умереть.</orth>
                    <str>умер<stress>е</stress>ть</str>
                </w>
            </l>

        </lg>
        <lg type="stanza">
            <l>
                <w>
                    <orth>Всего</orth>
                    <str>всег<stress>о</stress></str>
                </w>
                <w>
                    <orth>верней</orth>
                    <str>верн<stress>е</stress>й</str>
                </w>
                <w>
                    <orth>свинец</orth>
                    <str>свин<stress>е</stress>ц</str>
                </w>
                <w>
                    <orth>душе</orth>
                    <str>душ<stress>е</stress></str>
                </w>
                <w>
                    <orth>крылатой</orth>
                    <str>крыл<stress>а</stress>той</str>
                </w>
            </l>
            <l>
                <w>
                    <orth>Небесные</orth>
                    <str>неб<stress>е</stress>сные</str>
                </w>
                <w>
                    <orth>откроет</orth>
                    <str>откр<stress>о</stress>ет</str>
                </w>
                <w>
                    <orth>рубежи,</orth>
                    <str>рубеж<stress>и</stress></str>
                </w>
            </l>
            <l>
                <w>
                    <orth>Иль</orth>
                    <str>иль</str>
                </w>
                <w>
                    <orth>хриплый</orth>
                    <str>хр<stress>и</stress>плый</str>
                </w>
                <w>
                    <orth>ужас</orth>
                    <str><stress>у</stress>жас</str>
                </w>
                <w>
                    <orth>лапою</orth>
                    <str>л<stress>а</stress>пою</str>
                </w>
                <w>
                    <orth>косматой</orth>
                    <str>косм<stress>а</stress>той</str>
                </w>
            </l>
            <l>
                <w>
                    <orth>Из</orth>
                    <str>из</str>
                </w>
                <w>
                    <orth>сердца,</orth>
                    <str>с<stress>е</stress>рдца</str>
                </w>
                <w>
                    <orth>как</orth>
                    <str>как</str>
                </w>
                <w>
                    <orth>из</orth>
                    <str>из</str>
                </w>
                <w>
                    <orth>губки,</orth>
                    <str>г<stress>у</stress>бки</str>
                </w>
                <w>
                    <orth>выжмет</orth>
                    <str>в<stress>ы</stress>жмет</str>
                </w>
                <w>
                    <orth>жизнь.</orth>
                    <str>ж<stress>и</stress>знь</str>
                </w>
            </l>
        </lg>
    </divs>
    <date>1925</date>
</poem>
